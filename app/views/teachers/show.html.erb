<% if @teacher.clocked? %>
    <%= link_to 'Clock Out', clock_event_path, method: :put, class: 'btn btn-lg btn-info' %>
<% else %>
<%= link_to 'Clock In', new_clock_event_path, class: 'btn btn-lg btn-success' %>
<% end%>
